@model IEnumerable<HemenBiletProje.Models.Flight>
@{
    ViewBag.Title = "Uçuş Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Uçuş Listesi</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Havaalanı</th>
                <th>Planlanan</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@(flight.FlightDate ?? "Bilgi Yok")</td>
                    <td>@(flight.FlightStatus ?? "Bilgi Yok")</td>
                    <td>@(flight.Airport ?? "Bilgi Yok")</td>
                    <td>@(flight.Scheduled ?? "Bilgi Yok")</td>
                    <td>
                        @Html.ActionLink("Koltuk Seç", "SeatSelection", new { id = flight.FlightId }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
